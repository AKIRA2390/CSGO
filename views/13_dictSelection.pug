extends layout

block content
    h1 dict selection 
    p= chinese  
    p= japanese  
    p= words 
    p= dictionaries
    
    form(action="/input/analysis/selection/createDictAndAdd" method="POST")
        input(type="hidden", value=chinese, name="chinese")
        input(type="hidden", value=japanese, name="japanese")
        input(type="hidden", value=words, name="words")
        input(type="text", name="dictName") 
        input(type="text", name="dictDescription") 
        button(type="submit") create new dict

    form(action="/input/analysis/add2Dict" method="POST")
        input(type="hidden", value=chinese, name="chinese")
        input(type="hidden", value=japanese, name="japanese")
        input(type="hidden", value=words, name="words")
        select(name="dictID")
            each dict in dictionaries
                option(value=dict.id) #{dict.name}
        button(type="submit") add to existing dict
        