extends layout

block content
    h1 Dictionary: #{dictionaryName}
    h2 Word Management

    //- input(type="hidden", value=responce, name="responce")
    form(action="/delete/words" method="POST")
        input(type="hidden", value=dictionaryID, name="dictionaryID")
        table(border='1')
            tr 
                th ID 
                th Word
                th PinYin 
                th Meaning 
                th POS 
                th Level 
                th Delete?
            each word in dictWords
                tr 
                    td= word.id
                    td= word.word 
                    td= word.pinyin 
                    td= word.meaning 
                    td= word.partOfSpeech 
                    td= word.hskLevel 
                    td 
                        input(type="checkbox",value=word.id,name="deleteWordsIDs",id=deletion)
        button(type="submit") Delete!  
    
    h2 Sentence Management
    form(action="/delete/sentences" method="POST")
        input(type="hidden", value=dictionaryID, name="dictionaryID")
        table(border='1')
            tr 
                th ID 
                th Chinese
                th Japanese 
                th Words 
                th Delete?
            each sents in dictSents
                tr 
                    td= sents.id
                    td= sents.chinese 
                    td= sents.japanese 
                    td
                        each word in sents.words
                            span= word.word
                            br
                    td 
                        input(type="checkbox",value=sents.id,name="deleteSentsIDs",id=deletion)
        button(type="submit") Delete!  
    br
    h2 Delete Dictionary?
    form(action="/delete/Dicts" method="POST")
        input(type="hidden", value=dictionaryID, name="dictionaryID")
        button(type="submit") Delete this DICTIONARY!